<Application
    x:Class="SolidZip.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:local="clr-namespace:SolidZip"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>

            <SolidColorBrush x:Key="SzBackgroundColorBrush">#333333</SolidColorBrush>
            <SolidColorBrush x:Key="SzForegroundHoverColorBrush">#a3a3a3</SolidColorBrush>
            <SolidColorBrush x:Key="SzPrimaryColorBrush">#4b00c4</SolidColorBrush>
            <SolidColorBrush x:Key="SzForegroundColorBrush">#f0f0f0</SolidColorBrush>


            <FontFamily x:Key="BricolageGrotesque">assets/fonts/BricolageGrotesque.ttf#Bricolage Grotesque</FontFamily>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/IconButton.xaml" />
                <ResourceDictionary Source="Styles/Menu.xaml" />
                <ResourceDictionary Source="Styles/SzTextBoxWithWatermarkEnds.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
