<Window
    AllowsTransparency="True"
    Background="{DynamicResource SzBackgroundColorBrush}"
    Height="450"
    Icon="/assets/icon.ico"
    Title="SolidZip.Deprecated"
    Width="800"
    WindowStyle="None"
    d:DataContext="{d:DesignInstance viewModels:MainWindowViewModel}"
    mc:Ignorable="d"
    x:Class="SolidZip.Deprecated.Views.MainWindow"
    x:Name="MainXamlWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:controls="clr-namespace:SolidZip.Deprecated.Views.Controls"
    xmlns:converters="clr-namespace:SolidZip.Deprecated.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:viewModels="clr-namespace:SolidZip.Deprecated.ViewModels"
    xmlns:views="clr-namespace:SolidZip.Deprecated.Views"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <Grid.Resources>
                <system:Double x:Key="TitleBarIconsWidth">32</system:Double>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                Orientation="Horizontal"
                VerticalAlignment="Center">

                <Image
                    Margin="4,0,0,0"
                    Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="{StaticResource TitleBarIconsWidth}" />
                <TextBlock
                    FontFamily="{StaticResource BricolageGrotesque}"
                    FontSize="15"
                    Foreground="{DynamicResource SzForegroundColorBrush}"
                    Margin="3,10,0,0"
                    Name="RealTitle"
                    Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" />

            </StackPanel>

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                VerticalAlignment="Top">

                <Button
                    Click="Minimize"
                    Content="{materialIcons:MaterialIconExt Kind=Minimize}"
                    Padding="2"
                    Style="{DynamicResource SzIconButton}"
                    Width="{StaticResource TitleBarIconsWidth}" />
                <Button
                    Click="Restore"
                    Content="{materialIcons:MaterialIconExt Kind=Maximize}"
                    Padding="2"
                    Style="{DynamicResource SzIconButton}"
                    Width="{StaticResource TitleBarIconsWidth}" />
                <Button
                    Click="Close"
                    Content="{materialIcons:MaterialIconExt Kind=Close}"
                    Padding="2"
                    Width="{StaticResource TitleBarIconsWidth}">
                    <Button.Style>
                        <Style BasedOn="{StaticResource SzIconButton}" TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource SzPrimaryColorBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>

        </Grid>

        <Menu Grid.Row="1" Style="{StaticResource SzMenu}">

            <MenuItem
                Header="{Binding LocalizationManager.FileMenuItem}"
                Icon="{materialIcons:MaterialIconExt Kind=File}"
                Style="{StaticResource SzMenuItem}">
                <MenuItem
                    Header="{Binding LocalizationManager.ShowInWindowsExplorerMenuItem}"
                    Icon="{materialIcons:MaterialIconExt Kind=DesktopWindows}"
                    Style="{StaticResource SzMenuItem}" />
                <MenuItem
                    Header="{Binding LocalizationManager.RenameMenuItem}"
                    Icon="{materialIcons:MaterialIconExt Kind=Rename}"
                    Style="{StaticResource SzMenuItem}" />
                <MenuItem
                    Header="{Binding LocalizationManager.CreateMenuItem}"
                    Icon="{materialIcons:MaterialIconExt Kind=Create}"
                    Style="{StaticResource SzMenuItem}">
                    <MenuItem
                        Header="{Binding LocalizationManager.ArchiveMenuItem}"
                        Icon="{materialIcons:MaterialIconExt Kind=ArchiveAdd}"
                        Style="{StaticResource SzMenuItem}" />
                    <MenuItem
                        Header="{Binding LocalizationManager.FileMenuItem}"
                        Icon="{materialIcons:MaterialIconExt Kind=FileTextAdd}"
                        Style="{StaticResource SzMenuItem}" />
                    <MenuItem
                        Header="{Binding LocalizationManager.DirectoryMenuItem}"
                        Icon="{materialIcons:MaterialIconExt Kind=CreateNewFolder}"
                        Style="{StaticResource SzMenuItem}" />
                </MenuItem>
                <MenuItem
                    Header="{Binding LocalizationManager.SelectMenuItem}"
                    Icon="{materialIcons:MaterialIconExt Kind=Select}"
                    Style="{StaticResource SzMenuItem}">
                    <MenuItem
                        Header="{Binding LocalizationManager.AllFiles}"
                        Icon="{materialIcons:MaterialIconExt Kind=FileSearch}"
                        Style="{StaticResource SzMenuItem}" />
                    <MenuItem
                        Header="{Binding LocalizationManager.AllDirectoriesMenuItem}"
                        Icon="{materialIcons:MaterialIconExt Kind=FolderSearch}"
                        Style="{StaticResource SzMenuItem}" />
                </MenuItem>

            </MenuItem>
            <MenuItem
                Header="{Binding LocalizationManager.ViewMenuItem}"
                Icon="{materialIcons:MaterialIconExt Kind=ViewArray}"
                Style="{StaticResource SzMenuItem}">
                <MenuItem
                    Header="{Binding LocalizationManager.TableMenuItems}"
                    Icon="{materialIcons:MaterialIconExt Kind=CheckBox}"
                    Style="{StaticResource SzMenuItem}" />
                <MenuItem
                    Header="{Binding LocalizationManager.ListMenuItem}"
                    Icon="{materialIcons:MaterialIconExt Kind=CheckBox}"
                    Style="{StaticResource SzMenuItem}" />
            </MenuItem>
            <MenuItem
                Header="{Binding LocalizationManager.ServicesMenuItem}"
                Icon="{materialIcons:MaterialIconExt Kind=ServiceToolbox}"
                Style="{StaticResource SzMenuItem}">
                <MenuItem
                    Header="{Binding LocalizationManager.ShowHistoryMenuItem}"
                    Icon="{materialIcons:MaterialIconExt Kind=ClipboardTextHistory}"
                    Style="{StaticResource SzMenuItem}" />
            </MenuItem>

            <!--  New Archive  -->
            <MenuItem Icon="{materialIcons:MaterialIconExt Kind=PlusBold}" Style="{StaticResource SzMenuItem}">
                <MenuItem
                    Header="{Binding LocalizationManager.ZipFile}"
                    Icon="{materialIcons:MaterialIconExt Kind=ZipBox}"
                    Style="{StaticResource SzMenuItem}" />
            </MenuItem>

            <!--  Undo and Redo  -->
            <MenuItem
                Command="{Binding UndoCommand}"
                Foreground="{Binding CanUndo, Converter={converters:ExplorerHistoryButtonForegroundConvertor}}"
                Icon="{materialIcons:MaterialIconExt Kind=Undo}"
                Style="{StaticResource SzMenuItem}" />
            <MenuItem
                Command="{Binding RedoCommand}"
                Foreground="{Binding CanRedo, Converter={converters:ExplorerHistoryButtonForegroundConvertor}}"
                Icon="{materialIcons:MaterialIconExt Kind=Redo}"
                Style="{StaticResource SzMenuItem}" />

            <!--  Lua  -->
            <MenuItem Icon="{materialIcons:MaterialIconExt Kind=LanguageLua}" Style="{StaticResource SzMenuItem}" />

        </Menu>

        <!--  Search  -->
        <Grid Grid.Row="2" x:Name="SearchFullGrid">

            <Grid.Resources>
                <Style TargetType="Border" x:Key="FocusBorderStyle">
                    <Setter Property="BorderBrush" Value="{DynamicResource SzForegroundHoverColorBrush}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsKeyboardFocused, RelativeSource={RelativeSource AncestorType=controls:TextBoxWithWatermarkEnds}}" Value="True">
                            <Setter Property="BorderBrush" Value="{DynamicResource SzPrimaryColorBrush}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Search  Icon  -->
            <Border BorderThickness="0" Style="{StaticResource FocusBorderStyle}">
                <materialIcons:MaterialIcon
                    Foreground="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=Border}}"
                    Grid.Column="0"
                    Kind="Search"
                    Margin="10,0,10,0" />
            </Border>


            <Grid Grid.Column="1" x:Name="SearchGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Search Image  -->
                <Border
                    BorderThickness="3,3,0,3"
                    CornerRadius="5 0 0 5"
                    Grid.Column="0"
                    Style="{StaticResource FocusBorderStyle}"
                    Width="{Binding Height, RelativeSource={RelativeSource Self}}"
                    x:Name="IconBorder">
                    <Image Height="{Binding FontSize, ElementName=InputTextBox}" Margin="2,0,0,0">
                        <Image.Source>
                            <MultiBinding Converter="{converters:NotNullImageSourceMultiValueConverter}">
                                <Binding Path="CurrentDirectoryBeforeSearching" />
                                <Binding Path="CurrentPath" />
                            </MultiBinding>
                        </Image.Source>
                    </Image>
                </Border>


                <Border
                    BorderThickness="0,3,3,3"
                    CornerRadius="0 5 5 0"
                    Grid.Column="1"
                    Style="{StaticResource FocusBorderStyle}"
                    x:Name="TextBoxBorder">
                    <controls:TextBoxWithWatermarkEnds
                        Foreground="{DynamicResource SzForegroundColorBrush}"
                        Margin="0,0,5,0"
                        SetWatermarkCommand="{Binding SetSearchWatermarkCommand}"
                        SetWatermarkKey="Enter"
                        Style="{StaticResource SzTextBoxWithWatermarkEndsStyle}"
                        Text="{Binding CurrentPath}"
                        UpdateWatermarkCommand="{Binding ChangeSearchWatermarkCommand}"
                        UpdateWatermarkKey="Tab"
                        Watermark="{Binding SearchWatermark}"
                        WatermarkForeground="{DynamicResource SzForegroundHoverColorBrush}"
                        x:Name="InputTextBox">

                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="GotKeyboardFocus">
                                <b:InvokeCommandAction Command="{Binding StartShowingSearchWatermarkCommand}" />
                            </b:EventTrigger>
                            <b:EventTrigger EventName="LostKeyboardFocus">
                                <b:InvokeCommandAction Command="{Binding StartShowingSearchWatermarkCommand}" />
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </controls:TextBoxWithWatermarkEnds>
                </Border>
            </Grid>
        </Grid>

        <!--  Explorer view  -->
        <ContentControl
            BorderBrush="Transparent         "
            BorderThickness="0"
            Content="{Binding ExplorerControl}"
            Grid.Row="3" />

        <!--  Footer  -->
        <Border
            BorderBrush="{DynamicResource SzForegroundColorBrush}"
            BorderThickness="0,1.8,0,0"
            Grid.Row="4">
            <Grid Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>


                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="{materialIcons:MaterialIconExt Kind=Settings}" Style="{StaticResource SzIconButton}" />
                    <Button Content="{materialIcons:MaterialIconExt Kind=Theme}" Style="{StaticResource SzIconButton}" />
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <!--  Load from lua extensions  -->
                </StackPanel>
            </Grid>
        </Border>
    </Grid>


</Window>
