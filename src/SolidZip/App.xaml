<Application
    x:Class="SolidZip.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="BricolageGrotesque">assets/fonts/BricolageGrotesque.ttf#Bricolage Grotesque</FontFamily>
            <!--
                Mock of the real theme because real theme loads from .xml file in app-data
            -->
            <SolidColorBrush x:Key="BackgroundColorBrush">#333333</SolidColorBrush>
            <SolidColorBrush x:Key="ForegroundHoverColorBrush">#a3a3a3</SolidColorBrush>
            <SolidColorBrush x:Key="PrimaryColorBrush">#4b00c4</SolidColorBrush>
            <SolidColorBrush x:Key="ForegroundColorBrush">#f0f0f0</SolidColorBrush>
            <SolidColorBrush x:Key="WarningColorBrush">#2d007a</SolidColorBrush>


            <system:Double x:Key="TitleBarIconsWidth">32</system:Double>
            <system:Double x:Key="IconWidth">24</system:Double>


            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/Styles/SzIconButton.xaml" />
                <ResourceDictionary Source="Views/Styles/SzMenu.xaml" />
                <ResourceDictionary Source="Views/Styles/SzCheckBox.xaml" />
                <ResourceDictionary Source="Views/Styles/SzComboBox.xaml" />
                <ResourceDictionary Source="Views/Styles/SzListBox.xaml" />
                <ResourceDictionary Source="Views/Styles/SzProgressBar.xaml" />
                <ResourceDictionary Source="Views/Styles/SzButtons.xaml" />
                <ResourceDictionary Source="Views/Styles/SzTextBlock.xaml" />
                <ResourceDictionary Source="Views/Styles/SzTextBox.xaml" />
                <ResourceDictionary Source="Views/Styles/SzContextMenu.xaml" />
                <ResourceDictionary Source="Views/Styles/SzTextBoxWithWatermarkEnds.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>


    </Application.Resources>
</Application>