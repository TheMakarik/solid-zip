<Application
    StartupUri="Views/MainView.xaml"
    x:Class="SolidZip.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="BricolageGrotesque">assets/fonts/BricolageGrotesque.ttf#Bricolage Grotesque</FontFamily>
            <SolidColorBrush x:Key="BackgroundColorBrush">#333333</SolidColorBrush>
            <SolidColorBrush x:Key="ForegroundHoverColorBrush">#a3a3a3</SolidColorBrush>
            <SolidColorBrush x:Key="PrimaryColorBrush">#4b00c4</SolidColorBrush>
            <SolidColorBrush x:Key="ForegroundColorBrush">#f0f0f0</SolidColorBrush>
            <SolidColorBrush x:Key="WarningColorBrush">#2d007a</SolidColorBrush>


            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/Styles/IconButton.xaml" />
                <ResourceDictionary Source="Views/Styles/Menu.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>


    </Application.Resources>
</Application>