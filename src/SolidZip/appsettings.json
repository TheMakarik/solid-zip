{
  "PathsOptions": {
    "AppData": "%APPDATA%\\solid-zip",
    "UserData": "%APPDATA%\\solid-zip\\user.json",
    "Logging": "%APPDATA%\\solid-zip\\logs",
    "Themes": "%APPDATA%\\solid-zip\\themes",
    "Packages": "%APPDATA%\\solid-zip\\packages",
    "ModulesPath": "..\\szlua",
    "PluginsPath": ["%APPDATA%\\solid-zip\\plugins", "..\\plugins"]
  },
  
  "DefaultOptions": {
    "UserData": {
      "CurrentTheme": "system-purple",
      "CurrentCulture": "",
      "ExplorerElementsView": "List",
      "FileSizeMeasurement": "KiloBytes",
      "AttachPluginsConsole": false,
      "RootDirectoryAdditionalContent": ["%USERPROFILE%\\Documents", "%USERPROFILE%\\Downloads", "%USERPROFILE%\\Videos"],
      "ShowHiddenDirectories": true
    },
    "Theme": {
      "ThemeMetadata": {
        ""
      }
    }
  },

  "ExplorerOptions": {
    "RootDirectory": "sz\\",
    "DeeperDirectory": ".."
  },
  
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console"],
    "MinimumLevel": "Verbose",
    "Enrich": ["WithThreadId"],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Level}{NewLine}    at time: {Timestamp:yyyy-MM-dd HH:mm}{NewLine}    at thread: {ThreadId}{NewLine}    source: {SourceContext}{NewLine}    message: {Message:lj}{NewLine}    exception: {Exception}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "%APPDATA%\\solid-zip\\logs\\log_.txt",
          "outputTemplate": "{Level} at time: {Timestamp:yyyy-MM-dd HH:mm} at thread: {ThreadId} source: {SourceContext} message: {Message}{NewLine}",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ]
  }
}