<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Menu" x:Key="SzMenu">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource ForegroundColorBrush}" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style TargetType="MenuItem" x:Key="SzMenuItem">
        <Setter Property="FontSize" Value="15" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource ForegroundColorBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        SnapsToDevicePixels="True"
                        x:Name="Border">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition SharedSizeGroup="IconGroup" Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition SharedSizeGroup="ShortcutGroup" Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <ContentPresenter
                                Content="{TemplateBinding Icon}"
                                Grid.Column="0"
                                Margin="4,0,8,0"
                                VerticalAlignment="Center"
                                x:Name="Icon" />

                            <ContentPresenter
                                Content="{TemplateBinding Header}"
                                Grid.Column="1"
                                Margin="2,0,16,0"
                                RecognizesAccessKey="True"
                                VerticalAlignment="Center"
                                x:Name="Header" />

                            <TextBlock
                                Foreground="{DynamicResource ForegroundColorBrush}"
                                Grid.Column="2"
                                Margin="0,10"
                                Text="{TemplateBinding InputGestureText}"
                                VerticalAlignment="Center"
                                x:Name="InputGestureText" />

                            <Popup
                                AllowsTransparency="True"
                                IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                Placement="Bottom"
                                PopupAnimation="Fade"
                                x:Name="SubMenuPopup">
                                <Border
                                    Background="{DynamicResource BackgroundColorBrush}"
                                    BorderBrush="Transparent"
                                    BorderThickness="1"
                                    Padding="0"
                                    x:Name="SubMenuBorder">
                                    <ItemsPresenter
                                        KeyboardNavigation.DirectionalNavigation="Cycle"
                                        KeyboardNavigation.TabNavigation="Cycle"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                        x:Name="ItemsPresenter" />
                                </Border>
                            </Popup>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="Border" Value="{DynamicResource ForegroundHoverColorBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="Border" Value="{DynamicResource ForegroundHoverColorBrush}" />
                            <Setter Property="Opacity" TargetName="Border" Value="0.8" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#888888" />
                        </Trigger>
                        <Trigger Property="IsSubmenuOpen" Value="True">
                            <Setter Property="Background" TargetName="Border" Value="{DynamicResource ForegroundHoverColorBrush}" />
                        </Trigger>

                        <Trigger Property="Role" Value="SubmenuHeader">
                            <Setter Property="Placement" TargetName="SubMenuPopup" Value="Right" />
                            <Setter Property="HorizontalOffset" TargetName="SubMenuPopup" Value="-2" />
                            <Setter Property="VerticalOffset" TargetName="SubMenuPopup" Value="-3" />
                        </Trigger>
                        <Trigger Property="Role" Value="SubmenuItem">
                            <Setter Property="Placement" TargetName="SubMenuPopup" Value="Right" />
                            <Setter Property="HorizontalOffset" TargetName="SubMenuPopup" Value="-2" />
                            <Setter Property="VerticalOffset" TargetName="SubMenuPopup" Value="-3" />
                        </Trigger>
                        <Trigger Property="Role" Value="TopLevelHeader">
                            <Setter Property="Placement" TargetName="SubMenuPopup" Value="Bottom" />
                            <Setter Property="HorizontalOffset" TargetName="SubMenuPopup" Value="0" />
                            <Setter Property="VerticalOffset" TargetName="SubMenuPopup" Value="0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="Role" Value="TopLevelHeader">
                <Setter Property="Padding" Value="16,8" />
            </Trigger>
            <Trigger Property="Role" Value="TopLevelItem">
                <Setter Property="Padding" Value="16,8" />
            </Trigger>
            <Trigger Property="Role" Value="SubmenuHeader">
                <Setter Property="Padding" Value="12,6" />
            </Trigger>
            <Trigger Property="Role" Value="SubmenuItem">
                <Setter Property="Padding" Value="12,6" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Separator" x:Key="SzMenuSeparator">
        <Setter Property="Background" Value="{DynamicResource ForegroundColorBrush}" />
        <Setter Property="Margin" Value="8,4" />
        <Setter Property="Height" Value="1" />
        <Setter Property="Opacity" Value="0.3" />
    </Style>

</ResourceDictionary>