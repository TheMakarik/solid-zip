<Window
    AllowsTransparency="True"
    Background="{DynamicResource BackgroundColorBrush}"
    DataContext="{markupExtensions:ResolveViewAndViewModel}"
    Height="450"
    Icon="/assets/szicon.ico"
    MinHeight="150"
    MinWidth="300"
    ResizeMode="CanResizeWithGrip"
    Title="{Binding Localization.ApplicationName}"
    Width="800"
    WindowStyle="None"
    d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
    mc:Ignorable="d"
    x:Class="SolidZip.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:behaviors="clr-namespace:SolidZip.Views.Behaviors"
    xmlns:controls="clr-namespace:SolidZip.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SolidZip.Views"
    xmlns:markupExtensions="clr-namespace:SolidZip.Views.MarkupExtensions"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:viewModels="clr-namespace:SolidZip.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        Main applications grid, divide app to five parts:
        * Title bar
        * Menu
        * Search
        * Directories
        * Footer
    -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <!--  Application's Title bar  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Title and Icon area  -->
            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                Orientation="Horizontal"
                VerticalAlignment="Center">

                <Image
                    Margin="4,3,0,0"
                    Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="{StaticResource IconWidth}" />
                <TextBlock
                    FontFamily="{StaticResource BricolageGrotesque}"
                    FontSize="15"
                    Foreground="{DynamicResource ForegroundColorBrush}"
                    Margin="3,10,0,0"
                    Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" />

            </StackPanel>

            <!--  Buttons area  -->
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                VerticalAlignment="Top">

                <!--  Minimize button  -->
                <Button
                    Click="Minimize"
                    Content="{materialIcons:MaterialIconExt Kind=Minimize}"
                    Padding="2"
                    Style="{DynamicResource SzIconButton}"
                    Width="{StaticResource TitleBarIconsWidth}" />

                <!--  Maximize button  -->
                <Button
                    Click="Restore"
                    Content="{materialIcons:MaterialIconExt Kind=Maximize}"
                    Padding="2"
                    Style="{DynamicResource SzIconButton}"
                    Width="{StaticResource TitleBarIconsWidth}" />

                <!--  Close button  -->
                <Button
                    Click="Close"
                    Content="{materialIcons:MaterialIconExt Kind=Close}"
                    Padding="2"
                    Width="{StaticResource TitleBarIconsWidth}">
                    <Button.Style>
                        <Style BasedOn="{StaticResource SzIconButton}" TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryColorBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <!--  Menu  -->
        <Menu Grid.Row="1" Style="{StaticResource SzMenu}">

            <!--  Style for text message that means lua components for menu are loading  -->
            <Menu.Resources>
                <Style TargetType="MenuItem" x:Key="LoadingMenuItem">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="Foreground" Value="{DynamicResource ForegroundColorBrush}" />
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="Padding" Value="12,6,12,6" />
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                    <Setter Property="IsHitTestVisible" Value="False" />
                    <Setter Property="Focusable" Value="False" />
                    <Setter Property="Icon" Value="{x:Null}" />
                    <Setter Property="MinHeight" Value="28" />
                </Style>
            </Menu.Resources>

            <!--
                File menu item
                Need to execute actions based on selected file/files
            -->
            <MenuItem
                Header="{Binding Localization.FileMenuItem}"
                Icon="{materialIcons:MaterialIconExt Kind=File}"
                Name="FileMenuItem"
                Style="{StaticResource SzMenuItem}">
                <MenuItem
                    Header="{Binding Localization.RenameMenuItem}"
                    Icon="{materialIcons:MaterialIconExt Kind=Rename}"
                    Style="{StaticResource SzMenuItem}" />
                <MenuItem
                    Header="{Binding Localization.CreateMenuItem}"
                    Icon="{materialIcons:MaterialIconExt Kind=Create}"
                    Style="{StaticResource SzMenuItem}">
                    <MenuItem
                        Header="{Binding Localization.ArchiveMenuItem}"
                        Icon="{materialIcons:MaterialIconExt Kind=ArchiveAdd}"
                        Style="{StaticResource SzMenuItem}" />
                    <MenuItem
                        Header="{Binding Localization.FileMenuItem}"
                        Icon="{materialIcons:MaterialIconExt Kind=FileTextAdd}"
                        Style="{StaticResource SzMenuItem}" />
                    <MenuItem
                        Header="{Binding Localization.DirectoryMenuItem}"
                        Icon="{materialIcons:MaterialIconExt Kind=CreateNewFolder}"
                        Style="{StaticResource SzMenuItem}" />
                </MenuItem>
                <MenuItem
                    Header="{Binding Localization.SelectMenuItem}"
                    Icon="{materialIcons:MaterialIconExt Kind=Select}"
                    Style="{StaticResource SzMenuItem}">
                    <MenuItem
                        Header="{Binding Localization.AllFiles}"
                        Icon="{materialIcons:MaterialIconExt Kind=FileSearch}"
                        Style="{StaticResource SzMenuItem}" />
                    <MenuItem
                        Header="{Binding Localization.AllDirectoriesMenuItem}"
                        Icon="{materialIcons:MaterialIconExt Kind=FolderSearch}"
                        Style="{StaticResource SzMenuItem}" />
                    <Separator />
                    <MenuItem
                        Header="{Binding Localization.Loading}"
                        Loaded="MenuItemsContentLoading_Loaded"
                        Style="{StaticResource LoadingMenuItem}" />
                </MenuItem>

                <MenuItem
                    Header="{Binding Localization.Loading}"
                    Loaded="MenuItemsContentLoading_Loaded"
                    Style="{StaticResource LoadingMenuItem}" />

            </MenuItem>
            <MenuItem
                Header="{Binding Localization.ViewMenuItem}"
                Icon="{materialIcons:MaterialIconExt Kind=ViewArray}"
                Style="{StaticResource SzMenuItem}">
                <MenuItem
                    Header="{Binding Localization.TableMenuItems}"
                    Icon="{materialIcons:MaterialIconExt Kind=CheckBox}"
                    Style="{StaticResource SzMenuItem}" />
                <MenuItem
                    Header="{Binding Localization.ListMenuItem}"
                    Icon="{materialIcons:MaterialIconExt Kind=CheckboxBlank}"
                    Style="{StaticResource SzMenuItem}" />

                <Separator />

                <MenuItem
                    Header="{Binding Localization.Themes}"
                    Icon="{materialIcons:MaterialIconExt Kind=ThemeOutline}"
                    Style="{StaticResource SzMenuItem}" />

                <MenuItem
                    Header="{Binding Localization.Loading}"
                    Loaded="MenuItemsContentLoading_Loaded"
                    Style="{StaticResource LoadingMenuItem}" />

            </MenuItem>
            <MenuItem
                Header="{Binding Localization.ServicesMenuItem}"
                Icon="{materialIcons:MaterialIconExt Kind=ServiceToolbox}"
                Name="ServiceMenuItem"
                Style="{StaticResource SzMenuItem}">

                <MenuItem
                    Header="{Binding Localization.Settings}"
                    Icon="{materialIcons:MaterialIconExt Kind=SettingsApplications}"
                    Style="{StaticResource SzMenuItem}" />
                <Separator />
                <MenuItem
                    Header="{Binding Localization.Loading}"
                    Loaded="MenuItemsContentLoading_Loaded"
                    Style="{StaticResource LoadingMenuItem}" />

            </MenuItem>

            <!--  New Archive  -->
            <MenuItem Icon="{materialIcons:MaterialIconExt Kind=PlusBold}" Style="{StaticResource SzIconOnlyMenuItem}">
                <MenuItem
                    Header="{Binding Localization.ZipFile}"
                    Icon="{materialIcons:MaterialIconExt Kind=ZipBox}"
                    Style="{StaticResource SzMenuItem}" />
            </MenuItem>

            <!--  Undo and Redo  -->
            <MenuItem
                Command="{Binding UndoCommand}"
                Foreground="{Binding CanUndo, Converter={markupExtensions:Converters Converter=ExplorerHistoryButtonForegroundConvertor}}"
                Icon="{materialIcons:MaterialIconExt Kind=Undo}"
                Style="{StaticResource SzIconOnlyMenuItem}" />
            <MenuItem
                Command="{Binding RedoCommand}"
                Foreground="{Binding CanRedo, Converter={markupExtensions:Converters Converter=ExplorerHistoryButtonForegroundConvertor}}"
                Icon="{materialIcons:MaterialIconExt Kind=Redo}"
                Style="{StaticResource SzIconOnlyMenuItem}" />

            <!--  Lua  -->
            <MenuItem Icon="{materialIcons:MaterialIconExt Kind=LanguageLua}" Style="{StaticResource SzIconOnlyMenuItem}" />
        </Menu>


        <Grid Grid.Row="2" x:Name="SearchFullGrid">
            <Grid.Resources>
                <Style TargetType="Border" x:Key="FocusBorderStyle">
                    <Setter Property="BorderBrush" Value="{DynamicResource ForegroundHoverColorBrush}" />
                    <Style.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColorBrush}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="materialIcons:MaterialIcon" x:Key="SearchIconStyle">
                    <Setter Property="Foreground" Value="{DynamicResource ForegroundHoverColorBrush}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsKeyboardFocusWithin, ElementName=SearchContainer}" Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryColorBrush}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Search Icon  -->
            <materialIcons:MaterialIcon
                Grid.Column="0"
                Kind="Search"
                Margin="10,0,10,0"
                Style="{StaticResource SearchIconStyle}" />

            <!--  Search Container  -->
            <Border
                BorderThickness="3"
                CornerRadius="5"
                Grid.Column="1"
                Margin="0,0,8,0"
                Style="{StaticResource FocusBorderStyle}"
                x:Name="SearchContainer">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Folder Image  -->
                    <Border
                        Background="Transparent"
                        BorderThickness="0"
                        Grid.Column="0"
                        Width="{Binding Height, RelativeSource={RelativeSource Self}}">
                        <Image Height="{Binding FontSize, ElementName=InputTextBox}" Margin="5,0">
                            <Image.Source>
                                <MultiBinding Converter="{markupExtensions:Converters Converter=NotNullImageSourceMultiValueConverter}">
                                    <Binding Path="CurrentRealPath" />
                                    <Binding Path="CurrentUiPath" />
                                </MultiBinding>
                            </Image.Source>
                        </Image>
                    </Border>

                    <!--  Searcher  -->
                    <controls:TextBoxWithWatermarkEnds
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{DynamicResource ForegroundColorBrush}"
                        Grid.Column="1"
                        Margin="5,2"
                        SetWatermarkCommand="{Binding GetSearchWatermarkContentCommand}"
                        SetWatermarkKey="Enter"
                        Style="{StaticResource SzTextBoxWithWatermarkEndsStyle}"
                        Text="{Binding CurrentUiPath}"
                        UpdateWatermarkCommand="{Binding SearchCommand}"
                        UpdateWatermarkKey="Tab"
                        Watermark="{Binding SearchWatermark}"
                        WatermarkForeground="{DynamicResource ForegroundHoverColorBrush}"
                        x:Name="InputTextBox">

                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="GotKeyboardFocus">
                                <b:InvokeCommandAction Command="{Binding StartSearchCommand}" />
                            </b:EventTrigger>
                            <b:EventTrigger EventName="LostKeyboardFocus">
                                <b:InvokeCommandAction Command="{Binding StopSearchCommand}" />
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </controls:TextBoxWithWatermarkEnds>
                </Grid>
            </Border>
        </Grid>

        <!--  Footer  -->
        <Border
            BorderBrush="{DynamicResource ForegroundColorBrush}"
            BorderThickness="0,3,0,0"
            Grid.Row="4">
            <StackPanel Orientation="Horizontal">
                <Button
                    Command="{Binding OpenSettingsCommand}"
                    Content="{materialIcons:MaterialIconExt Kind=Settings}"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SzIconButton}"
                    ToolTip="{Binding Localization.Settings}" />
                <Button
                    Content="{materialIcons:MaterialIconExt Kind=Theme}"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SzIconButton}"
                    ToolTip="{Binding Localization.Themes}" />
            </StackPanel>
        </Border>


    </Grid>
</Window>