<Window
    AllowsTransparency="True"
    Background="{DynamicResource BackgroundColorBrush}"
    DataContext="{markupExtensions:ResolveViewAndViewModel}"
    Height="450"
    Icon="/assets/szicon.ico"
    MinHeight="150"
    MinWidth="300"
    MouseLeftButtonDown="DragWindow"
    PreviewMouseRightButtonUp="HideSelectionBorder"
    ResizeMode="CanResizeWithGrip"
    Title="{Binding Localization.ApplicationName}"
    Width="800"
    WindowStyle="None"
    d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
    mc:Ignorable="d"
    x:Class="SolidZip.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:behaviors="clr-namespace:SolidZip.Views.Behaviors"
    xmlns:controls="clr-namespace:SolidZip.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:markupExtensions="clr-namespace:SolidZip.Views.MarkupExtensions"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:templateSelectors="clr-namespace:SolidZip.Views.TemplateSelectors"
    xmlns:viewModels="clr-namespace:SolidZip.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        Main applications grid, divide app to five parts:
        * Title bar
        * Menu
        * Search
        * Directories
        * Footer
    -->
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.Resources>

            <!--  Default explorer view for List view  -->
            <DataTemplate x:Key="ListBoxExplorerView">
                <controls:BindableMultiSelectionListBox
                    BorderBrush="Transparent"
                    FontSize="{Binding ExplorerElementsHeight}"
                    ItemsSource="{Binding CurrentExplorerContent}"
                    SelectedItems="{Binding SelectedFileEntities}"
                    Style="{StaticResource SzFilesExplorerListBox}"
                    x:Name="ROOT_Content">
                    <!--  Do not rename, needs for code-behind  -->

                    <!--  Explorer list box behaviors  -->
                    <b:Interaction.Behaviors>
                        <behaviors:ItemDoubleClickBehavior Command="{Binding GetContentCommand}" />
                        <behaviors:ControlPlusMouseWheelBehavior
                            Command="{Binding ChangeExplorerElementsHeightCommand}" />
                    </b:Interaction.Behaviors>


                </controls:BindableMultiSelectionListBox>
            </DataTemplate>
            <DataTemplate x:Key="TableExplorerView" />
        </Grid.Resources>


        <!--  Application's Title bar  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Title and Icon area  -->
            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                Orientation="Horizontal"
                VerticalAlignment="Center">

                <Image
                    Margin="4,3,0,0"
                    Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="{StaticResource IconWidth}" />
                <TextBlock
                    FontFamily="{StaticResource BricolageGrotesque}"
                    FontSize="15"
                    Foreground="{DynamicResource ForegroundColorBrush}"
                    Margin="3,10,0,0"
                    Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" />

            </StackPanel>

            <!--  Buttons area  -->
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                VerticalAlignment="Top">

                <!--  Minimize button  -->
                <Button
                    Click="Minimize"
                    Content="{materialIcons:MaterialIconExt Kind=Minimize}"
                    Padding="2"
                    Style="{DynamicResource SzIconButton}"
                    Width="{StaticResource TitleBarIconsWidth}" />

                <!--  Maximize button  -->
                <Button
                    Click="Restore"
                    Content="{materialIcons:MaterialIconExt Kind=Maximize}"
                    Padding="2"
                    Style="{DynamicResource SzIconButton}"
                    Width="{StaticResource TitleBarIconsWidth}" />

                <!--  Close button  -->
                <Button
                    Click="Close"
                    Content="{materialIcons:MaterialIconExt Kind=Close}"
                    Padding="2"
                    Width="{StaticResource TitleBarIconsWidth}">
                    <Button.Style>
                        <Style BasedOn="{StaticResource SzIconButton}" TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryColorBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <!--  Menu  -->
        <Menu Grid.Row="1" Style="{StaticResource SzMenu}">
            <!--
                File menu item
                Need to execute actions based on selected file/files
            -->
            <MenuItem
                Header="{Binding Localization.FileMenuItem}"
                Icon="{materialIcons:MaterialIconExt Kind=File}"
                Loaded="LoadLuaMenuItems"
                Name="FileMenuItem"
                Style="{StaticResource SzMenuItem}">

                <!--  Rename folder or directory  -->
                <MenuItem
                    Header="{Binding Localization.RenameMenuItem}"
                    Icon="{materialIcons:MaterialIconExt Kind=Rename}"
                    Style="{StaticResource SzMenuItem}" />

                <!--  Create directory content  -->
                <MenuItem
                    Header="{Binding Localization.CreateMenuItem}"
                    Icon="{materialIcons:MaterialIconExt Kind=Create}"
                    Loaded="LoadLuaMenuItems"
                    Name="CreteDirectoryContentMenuItem"
                    Style="{StaticResource SzMenuItem}">
                    <MenuItem
                        Header="{Binding Localization.ArchiveMenuItem}"
                        Icon="{materialIcons:MaterialIconExt Kind=ArchiveAdd}"
                        ItemsSource="{Binding}"
                        Style="{StaticResource SzMenuItem}" />
                    <MenuItem
                        Command="{Binding NewFileCommand}"
                        Header="{Binding Localization.FileMenuItem}"
                        Icon="{materialIcons:MaterialIconExt Kind=FileTextAdd}"
                        Style="{StaticResource SzMenuItem}" />
                    <MenuItem
                        Command="{Binding NewDirectoryCommand}"
                        Header="{Binding Localization.DirectoryMenuItem}"
                        Icon="{materialIcons:MaterialIconExt Kind=CreateNewFolder}"
                        Style="{StaticResource SzMenuItem}" />
                </MenuItem>
                <MenuItem
                    Header="{Binding Localization.SelectMenuItem}"
                    Icon="{materialIcons:MaterialIconExt Kind=Select}"
                    Loaded="LoadLuaMenuItems"
                    Name="SelectMenuItem"
                    Style="{StaticResource SzMenuItem}">
                    <MenuItem
                        Header="{Binding Localization.AllFiles}"
                        Icon="{materialIcons:MaterialIconExt Kind=FileSearch}"
                        Style="{StaticResource SzMenuItem}" />
                    <MenuItem
                        Header="{Binding Localization.AllDirectoriesMenuItem}"
                        Icon="{materialIcons:MaterialIconExt Kind=FolderSearch}"
                        Style="{StaticResource SzMenuItem}" />
                    <Separator />
                </MenuItem>


            </MenuItem>
            <MenuItem
                Header="{Binding Localization.ViewMenuItem}"
                Icon="{materialIcons:MaterialIconExt Kind=ViewArray}"
                Loaded="LoadLuaMenuItems"
                Name="ViewMenuItem"
                Style="{StaticResource SzMenuItem}">
                <MenuItem
                    Header="{Binding Localization.TableMenuItems}"
                    Icon="{materialIcons:MaterialIconExt Kind=CheckBox}"
                    Style="{StaticResource SzMenuItem}" />
                <MenuItem
                    Header="{Binding Localization.ListMenuItem}"
                    Icon="{materialIcons:MaterialIconExt Kind=CheckboxBlank}"
                    Style="{StaticResource SzMenuItem}" />

                <Separator />

                <MenuItem
                    Header="{Binding Localization.Themes}"
                    Icon="{materialIcons:MaterialIconExt Kind=ThemeOutline}"
                    Style="{StaticResource SzMenuItem}" />

            </MenuItem>

            <!--  A bunch of services for application like settings or undo/redo  -->
            <MenuItem
                Header="{Binding Localization.ServicesMenuItem}"
                Icon="{materialIcons:MaterialIconExt Kind=ServiceToolbox}"
                Loaded="LoadLuaMenuItems"
                Name="ServiceMenuItem"
                Style="{StaticResource SzMenuItem}">

                <!--  Settings  -->
                <MenuItem
                    Header="{Binding Localization.Settings}"
                    Icon="{materialIcons:MaterialIconExt Kind=SettingsApplications}"
                    Style="{StaticResource SzMenuItem}" />
                <Separator />

                <!--  Undo and redo  -->
                <MenuItem
                    Command="{Binding UndoCommand}"
                    Header="{Binding Localization.UndoMenuItem}"
                    Icon="{materialIcons:MaterialIconExt Kind=Undo}"
                    Style="{StaticResource SzMenuItem}" />
                <MenuItem
                    Command="{Binding RedoCommand}"
                    Header="{Binding Localization.RedoMenuItem}"
                    Icon="{materialIcons:MaterialIconExt Kind=Redo}"
                    Style="{StaticResource SzMenuItem}" />
                <Separator />

            </MenuItem>

            <!--  New Archive  -->
            <MenuItem
                Icon="{materialIcons:MaterialIconExt Kind=PlusBold}"
                Loaded="LoadLuaMenuItems"
                Style="{StaticResource SzIconOnlyMenuItem}"
                x:Name="CreateNewArchiveMenuItem">
                <MenuItem
                    Command="{Binding NewZipArchiveCommand}"
                    Header="{Binding Localization.ZipFile}"
                    Icon="{materialIcons:MaterialIconExt Kind=ZipBox}"
                    Style="{StaticResource SzMenuItem}" />
            </MenuItem>

            <!--  Undo and Redo  -->
            <MenuItem
                Command="{Binding UndoCommand}"
                Foreground="{Binding CanUndo, Converter={markupExtensions:Converters Converter=ExplorerHistoryButtonForegroundConvertor}}"
                Icon="{materialIcons:MaterialIconExt Kind=Undo}"
                Style="{StaticResource SzIconOnlyMenuItem}"
                ToolTip="{Binding Localization.UndoMenuItem}" />
            <MenuItem
                Command="{Binding RedoCommand}"
                Foreground="{Binding CanRedo, Converter={markupExtensions:Converters Converter=ExplorerHistoryButtonForegroundConvertor}}"
                Icon="{materialIcons:MaterialIconExt Kind=Redo}"
                Style="{StaticResource SzIconOnlyMenuItem}"
                ToolTip="{Binding Localization.RedoMenuItem}" />
        </Menu>


        <Grid Grid.Row="2" x:Name="SearchFullGrid">
            <Grid.Resources>
                <Style TargetType="Border" x:Key="FocusBorderStyle">
                    <Setter Property="BorderBrush" Value="{DynamicResource ForegroundHoverColorBrush}" />
                    <Style.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColorBrush}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>

                <Style TargetType="materialIcons:MaterialIcon" x:Key="SearchIconStyle">
                    <Setter Property="Foreground" Value="{DynamicResource ForegroundHoverColorBrush}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsKeyboardFocusWithin, ElementName=SearchContainer}"
                                     Value="True">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryColorBrush}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Search Icon  -->
            <materialIcons:MaterialIcon
                Grid.Column="0"
                Kind="Search"
                Margin="10,0,10,0"
                Style="{StaticResource SearchIconStyle}" />

            <!--  Search Container  -->
            <Border
                BorderThickness="3"
                CornerRadius="5"
                Grid.Column="1"
                Margin="0,0,8,0"
                Style="{StaticResource FocusBorderStyle}"
                x:Name="SearchContainer">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Folder Image  -->
                    <Border
                        Background="Transparent"
                        BorderThickness="0"
                        Grid.Column="0"
                        Width="{Binding Height, RelativeSource={RelativeSource Self}}">
                        <Image Height="{Binding FontSize, ElementName=InputTextBox}" Margin="5,0">
                            <Image.Source>
                                <MultiBinding
                                    Converter="{markupExtensions:Converters Converter=NotNullImageSourceMultiValueConverter}">
                                    <Binding Path="CurrentRealPath" />
                                    <Binding Path="CurrentUiPath" />
                                </MultiBinding>
                            </Image.Source>
                        </Image>
                    </Border>

                    <!--  Searcher  -->
                    <controls:TextBoxWithWatermarkEnds
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{DynamicResource ForegroundColorBrush}"
                        Grid.Column="1"
                        Margin="5,2"
                        SetWatermarkCommand="{Binding GetSearchWatermarkContentCommand}"
                        SetWatermarkKey="Enter"
                        Style="{StaticResource SzTextBoxWithWatermarkEndsStyle}"
                        Text="{Binding CurrentUiPath}"
                        UpdateWatermarkCommand="{Binding SearchCommand}"
                        UpdateWatermarkKey="Tab"
                        Watermark="{Binding SearchWatermark}"
                        WatermarkForeground="{DynamicResource ForegroundHoverColorBrush}"
                        x:Name="InputTextBox">

                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="GotKeyboardFocus">
                                <b:InvokeCommandAction Command="{Binding StartSearchCommand}" />
                            </b:EventTrigger>
                            <b:EventTrigger EventName="LostKeyboardFocus">
                                <b:InvokeCommandAction Command="{Binding StopSearchCommand}" />
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </controls:TextBoxWithWatermarkEnds>
                </Grid>
            </Border>
        </Grid>


        <!--  Explorer  -->
        <ContentControl
            Content="{Binding}"
            Grid.Row="3"
            PreviewMouseRightButtonDown="ShowSelectionBorder"
            PreviewMouseRightButtonUp="HideSelectionBorder"
            x:Name="ExplorerContent">
            <ContentControl.ContentTemplateSelector>
                <templateSelectors:ExplorerTemplateSelector DataGridTemplate="{StaticResource TableExplorerView}"
                                                            ListTemplate="{StaticResource ListBoxExplorerView}" />
            </ContentControl.ContentTemplateSelector>
        </ContentControl>

        <Canvas Grid.Row="3">
            <Border
                BorderBrush="{DynamicResource PrimaryColorBrush}"
                BorderThickness="3"
                PreviewMouseRightButtonUp="HideSelectionBorder"
                Visibility="Collapsed"
                x:Name="SelectionBorder">
                <Rectangle Fill="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=Border}}"
                           Opacity="0.4" />
            </Border>
        </Canvas>


        <materialIcons:MaterialIcon
            Foreground="{DynamicResource ForegroundColorBrush}"
            Grid.Row="3"
            Height="120"
            Kind="Loading"
            Visibility="Collapsed"
            Width="120">
            <materialIcons:MaterialIcon.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation
                                Duration="0:0:1"
                                From="0"
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                To="360" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </materialIcons:MaterialIcon.Triggers>
            <materialIcons:MaterialIcon.RenderTransform>
                <RotateTransform CenterX="15" CenterY="15" />
            </materialIcons:MaterialIcon.RenderTransform>
        </materialIcons:MaterialIcon>


        <!--  Footer  -->
        <Border
            BorderBrush="{DynamicResource ForegroundColorBrush}"
            BorderThickness="0,3,0,0"
            Grid.Row="4">
            <StackPanel Orientation="Horizontal">
                <Button
                    Command="{Binding OpenSettingsCommand}"
                    Content="{materialIcons:MaterialIconExt Kind=Settings}"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SzIconButton}"
                    ToolTip="{Binding Localization.Settings}" />
                <Button
                    Content="{materialIcons:MaterialIconExt Kind=Theme}"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SzIconButton}"
                    ToolTip="{Binding Localization.Themes}" />
            </StackPanel>
        </Border>


    </Grid>
</Window>