<Window
    AllowsTransparency="True"
    Background="{DynamicResource BackgroundColorBrush}"
    DataContext="{markupExtensions:ResolveViewAndViewModel}"
    Height="250"
    Icon="/assets/szicon.ico"
    MouseLeftButtonDown="ErrorView_OnMouseLeftButtonDown"
    Title="{Binding Localization.ErrorOccured}"
    Width="500"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    d:DataContext="{d:DesignInstance viewModels:ErrorViewModel}"
    mc:Ignorable="d"
    x:Class="SolidZip.Views.ErrorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:local="clr-namespace:SolidZip.Views"
    xmlns:markupExtensions="clr-namespace:SolidZip.Views.MarkupExtensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:SolidZip.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                Orientation="Horizontal"
                VerticalAlignment="Center">

                <Image
                    Margin="4,3,0,0"
                    Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="{StaticResource IconWidth}" />
                <TextBlock
                    FontFamily="{StaticResource BricolageGrotesque}"
                    FontSize="15"
                    Foreground="{DynamicResource ForegroundColorBrush}"
                    Margin="3,10,0,0"
                    Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" />

            </StackPanel>

            <Button
                Click="Close"
                Content="{icons:MaterialIconExt Kind=Close}"
                Grid.Row="0"
                HorizontalAlignment="Right"
                Padding="2"
                Width="{StaticResource TitleBarIconsWidth}">
                <Button.Style>
                    <Style BasedOn="{StaticResource SzIconButton}" TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryColorBrush}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" />
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button
                Command="{Binding ShowLogsCommand}"
                Margin="15"
                MinWidth="150"
                Style="{DynamicResource SzButton}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <icons:MaterialIcon Kind="ReadMore" />
                        <Label Content="{Binding Localization.ShowLogs}" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button
                Command="{Binding ContactToTheSupportCommand}"
                Margin="15"
                MinWidth="150"
                Style="{DynamicResource SzButton}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <icons:MaterialIcon Kind="Telephone" />
                        <Label Content="{Binding Localization.ContactSupport}" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                    </StackPanel>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</Window>
