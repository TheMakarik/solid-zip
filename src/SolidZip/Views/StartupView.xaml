<Window
    AllowsTransparency="True"
    Background="{DynamicResource BackgroundColorBrush}"
    DataContext="{markupExtensions:ResolveViewAndViewModel}"
    Height="200"
    MouseRightButtonDown="DragWindow"
    Title="StartupView"
    Width="450"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    d:DataContext="{d:DesignInstance viewModels:StartupViewModel}"
    mc:Ignorable="d"
    x:Class="SolidZip.Views.StartupView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls="clr-namespace:SolidZip.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:markupExtensions="clr-namespace:SolidZip.Views.MarkupExtensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:SolidZip.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            FontSize="40"
            Grid.Row="0"
            Margin="10,50,0,40"
            Style="{StaticResource SzTextBlockSectionHeader}"
            Text="SolidZip 2026" />
        <controls:ClippingBorder
            CornerRadius="10"
            Grid.Row="1"
            Margin="0,0,0,20">
            <ProgressBar
                ClipToBounds="True"
                Style="{StaticResource SzProgressBar}"
                Value="{Binding Progress}" />
        </controls:ClippingBorder>


    </Grid>
</Window>