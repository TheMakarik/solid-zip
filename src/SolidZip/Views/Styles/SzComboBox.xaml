<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="ComboBox" x:Key="SzComboBox">
        <Setter Property="Foreground" Value="{DynamicResource BackgroundColorBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColorBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="MinWidth" Value="200" />
    </Style>

    <Style TargetType="ComboBox" x:Key="SzComboBoxFileSize">
        <Setter Property="Foreground" Value="{DynamicResource BackgroundColorBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColorBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="MinWidth" Value="150" />
    </Style>

</ResourceDictionary>