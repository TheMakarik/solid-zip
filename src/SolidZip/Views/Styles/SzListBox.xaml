<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:markupExtensions="clr-namespace:SolidZip.Views.MarkupExtensions"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="ListBoxItem" x:Key="SzListBoxItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Padding="{TemplateBinding Padding}"
                        x:Name="Border">
                        <ContentPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="Border" Value="{DynamicResource ForegroundHoverColorBrush}" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" TargetName="Border" Value="{DynamicResource PrimaryColorBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate x:Key="SzListBoxItemTemplate">
        <Grid Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image
                Grid.Column="0"
                Height="24"
                Margin="0,0,10,0"
                Source="{Binding Text, ElementName=ItemHeader, Converter={markupExtensions:Converters Converter=PathToImageSourceConvertor}, ConverterParameter=Directory}"
                Width="24" />
            <TextBlock
                FontSize="13"
                Grid.Column="1"
                Text="{Binding Converter={markupExtensions:Converters Converter=ExpandEnvironmentVariablesConverter}}"
                VerticalAlignment="Center"
                x:Name="ItemHeader" />
        </Grid>
    </DataTemplate>

    <Style TargetType="ListBox" x:Key="SzFilesListBox">
        <Setter Property="Background" Value="{DynamicResource BackgroundColorBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource ForegroundColorBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ForegroundColorBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="ItemContainerStyle" Value="{StaticResource SzListBoxItem}" />
        <Setter Property="ItemTemplate" Value="{StaticResource SzListBoxItemTemplate}" />
    </Style>

</ResourceDictionary>