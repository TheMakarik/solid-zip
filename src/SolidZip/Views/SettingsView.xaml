<Window
    AllowsTransparency="True"
    Background="{DynamicResource BackgroundColorBrush}"
    DataContext="{markupExtensions:ResolveViewAndViewModel}"
    Height="550"
    Icon="/assets/szicon.ico"
    Name="SettingWindow"
    ResizeMode="CanResizeWithGrip"
    Title="{Binding Localization.Settings}"
    Width="800"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    d:DataContext="{d:DesignInstance viewModels:SettingsViewModel}"
    mc:Ignorable="d"
    x:Class="SolidZip.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:behaviors="clr-namespace:SolidZip.Views.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SolidZip.Views"
    xmlns:markupExtensions="clr-namespace:SolidZip.Views.MarkupExtensions"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:SolidZip.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border
            Background="{DynamicResource BackgroundColorBrush}"
            BorderBrush="{DynamicResource ForegroundColorBrush}"
            BorderThickness="0,0,0,1"
            Grid.Row="0"
            Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                    <Image
                        Height="24"
                        Margin="0,0,10,0"
                        Source="../assets/szicon.ico"
                        Width="{StaticResource IconWidth}" />
                    <TextBlock
                        FontFamily="{StaticResource BricolageGrotesque}"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource ForegroundColorBrush}"
                        Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" />
                </StackPanel>

                <Button
                    Click="CloseSettings"
                    Grid.Column="2"
                    Style="{StaticResource SzIconButton}"
                    ToolTip="{Binding Localization.Close}">
                    <materialIcons:MaterialIcon Kind="Close" />
                </Button>
            </Grid>
        </Border>

        <ScrollViewer
            Grid.Row="1"
            Padding="30"
            VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,30">
                    <TextBlock
                        Style="{StaticResource SzTextBlockSectionHeader}"
                        Text="{Binding Localization.LanguageSettings}"
                        ToolTip="{Binding Localization.LanguageSettingsTooltip}" />

                    <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                        <TextBlock
                            Style="{StaticResource SzTextBlockLabel}"
                            Text="{Binding Localization.Language}"
                            ToolTip="{Binding Localization.LanguageTooltip}"
                            Width="150" />
                        <ComboBox
                            ItemsSource="{Binding AvailableLanguages}"
                            SelectedItem="{Binding SelectedLanguage}"
                            SelectedValue="{Binding SelectedLanguage}"
                            Style="{StaticResource SzComboBox}"
                            ToolTip="{Binding Localization.SelectLanguageTooltip}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{Binding Converter={markupExtensions:Converters Converter=StringToFlagImageSourceConverter}}" Width="{Binding FontSize, RelativeSource={RelativeSource AncestorType=Window}}" />
                                        <TextBlock Text="{Binding}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <TextBlock
                        Foreground="{DynamicResource ForegroundColorBrush}"
                        Text="{Binding Localization.ChangeLocalizationWarning}"
                        Visibility="{Binding LocalizationWasChanged, Converter={markupExtensions:Converters Converter=BooleanToVisibilityConverter}}" />
                </StackPanel>

                <Border
                    Background="{DynamicResource BackgroundColorBrush}"
                    BorderBrush="{DynamicResource ForegroundColorBrush}"
                    BorderThickness="0,1,0,1"
                    Grid.Row="1"
                    Margin="0,0,0,30"
                    Padding="0,20,0,20">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,15"
                            Style="{StaticResource SzTextBlockSectionHeader}"
                            Text="{Binding Localization.ThemeSettings}"
                            ToolTip="{Binding Localization.ThemeSettingsTooltip}" />

                        <Button
                            Command="{Binding ChangeThemeCommand}"
                            HorizontalAlignment="Center"
                            Style="{StaticResource SzButtonTheme}"
                            ToolTip="{Binding Localization.ChangeThemeTooltip}">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon
                                    Height="24"
                                    Kind="Palette"
                                    Margin="0,0,10,0"
                                    Width="24" />
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Text="{Binding Localization.ChangeTheme}" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Row="2" Margin="0,0,0,30">
                    <TextBlock
                        Style="{StaticResource SzTextBlockSectionHeader}"
                        Text="{Binding Localization.ExplorerSettings}"
                        ToolTip="{Binding Localization.ExplorerSettingsTooltip}" />

                    <CheckBox
                        IsChecked="{Binding AttachPluginsConsole}"
                        Margin="0,0,0,10"
                        Style="{StaticResource SzCheckBox}"
                        ToolTip="{Binding Localization.ShowLuaConsoleTooltip}">
                        <TextBlock FontSize="13" Text="{Binding Localization.ShowLuaConsole}" />
                    </CheckBox>

                    <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                        <TextBlock
                            Style="{StaticResource SzTextBlockLabel}"
                            Text="{Binding Localization.ExplorerViewStyle}"
                            ToolTip="{Binding Localization.ExplorerViewStyleTooltip}"
                            Width="150" />
                        <ComboBox
                            ItemsSource="{Binding ExplorerViewStyles}"
                            SelectedItem="{Binding ExplorerElementsView}"
                            Style="{StaticResource SzComboBox}"
                            ToolTip="{Binding Localization.SelectViewStyleTooltip}" />
                    </StackPanel>

                    <CheckBox
                        IsChecked="{Binding ShowHiddenDirectories}"
                        Style="{StaticResource SzCheckBox}"
                        ToolTip="{Binding Localization.ShowHiddenDirectoriesTooltip}">
                        <TextBlock FontSize="13" Text="{Binding Localization.ShowHiddenDirectories}" />
                    </CheckBox>
                </StackPanel>

                <StackPanel Grid.Row="3">
                    <TextBlock
                        Style="{StaticResource SzTextBlockSectionHeader}"
                        Text="{Binding Localization.FileDisplaySettings}"
                        ToolTip="{Binding Localization.FileDisplaySettingsTooltip}" />

                    <StackPanel Margin="0,0,0,20" Orientation="Horizontal">
                        <TextBlock
                            Style="{StaticResource SzTextBlockLabel}"
                            Text="{Binding Localization.FileSizeDisplay}"
                            ToolTip="{Binding Localization.FileSizeDisplayTooltip}"
                            Width="150" />
                        <ComboBox
                            ItemsSource="{Binding FileSizeDisplayOptions}"
                            SelectedValue="{Binding .FileSizeMeasurement}"
                            Style="{StaticResource SzComboBoxFileSize}"
                            ToolTip="{Binding Localization.SelectFileSizeDisplayTooltip}" />
                    </StackPanel>

                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            Style="{StaticResource SzTextBlockLabel}"
                            Text="{Binding Localization.AdditionalRootFiles}"
                            ToolTip="{Binding Localization.AdditionalRootFilesTooltip}" />

                        <Border
                            BorderBrush="{DynamicResource ForegroundColorBrush}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Height="200">
                            <ListBox
                                ItemsSource="{Binding RootDirectoryAdditionalContent}"
                                Style="{StaticResource SzFilesListBox}"
                                ToolTip="{Binding Localization.SelectFileTooltip}">
                                <ListBox.ItemContainerStyle>
                                    <Style BasedOn="{StaticResource SzListBoxItem}" TargetType="ListBoxItem">
                                        <Setter Property="Tag" Value="{Binding RelativeSource={RelativeSource AncestorType=ListBox}}" />
                                        <Setter Property="ContextMenu">
                                            <Setter.Value>
                                                <ContextMenu BorderBrush="Transparent" Style="{StaticResource SzContextMenu}">

                                                    <!--  Problem: http://stackoverflow.com/questions/79845097/how-to-get-datacontext-from-placementtarget-parent-in-contextmenu-wpf?noredirect=1#comment140902473_79845097  -->
                                                    <MenuItem
                                                        Command="{Binding Tag.DataContext.AddRootDirectoryCommand}"
                                                        DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                        Header="{Binding Tag.DataContext.Localization.AddDirectory}"
                                                        Icon="{materialIcons:MaterialIconExt Kind=PlusBold}"
                                                        Style="{StaticResource SzMenuItem}" />
                                                    <MenuItem
                                                        Command="{Binding Tag.DataContext.RemoveRootDirectoryCommand}"
                                                        CommandParameter="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                        DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                                        Header="{Binding Tag.DataContext.Localization.RemoveDirectory}"
                                                        Icon="{materialIcons:MaterialIconExt Kind=RemoveBold}"
                                                        Style="{StaticResource SzMenuItem}" />
                                                </ContextMenu>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>
                            </ListBox>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <Border
            Background="{DynamicResource BackgroundColorBrush}"
            BorderBrush="{DynamicResource ForegroundColorBrush}"
            BorderThickness="0,1,0,0"
            Grid.Row="2"
            Padding="20,15">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Command="{Binding ResetSettingsCommand}"
                    Margin="0,0,15,0"
                    Style="{StaticResource SzIconButton}"
                    ToolTip="{Binding Localization.ResetToDefaultsTooltip}">
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon
                            Height="18"
                            Kind="Restore"
                            Margin="0,0,5,0"
                            Width="18" />
                        <TextBlock Text="{Binding Localization.Reset}" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>

                <Button
                    Command="{Binding SaveSettingsCommand}"
                    Style="{StaticResource SzButtonSave}"
                    ToolTip="{Binding Localization.SaveChangesTooltip}"
                    x:Name="SaveSettingsButton">
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon
                            Height="20"
                            Kind="ContentSave"
                            Margin="0,0,10,0"
                            Width="20" />
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="{Binding Localization.SaveChanges}" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>