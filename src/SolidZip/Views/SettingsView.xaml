<Window
    AllowsTransparency="True"
    Background="{DynamicResource BackgroundColorBrush}"
    DataContext="{markupExtensions:ResolveViewAndViewModel}"
    Height="550"
    Icon="/assets/szicon.ico"
    ResizeMode="CanResizeWithGrip"
    Title="{Binding Localization.Settings}"
    Width="800"
    WindowStartupLocation="CenterOwner"
    WindowStyle="None"
    d:DataContext="{d:DesignInstance viewModels:SettingsViewModel}"
    mc:Ignorable="d"
    x:Class="SolidZip.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SolidZip.Views"
    xmlns:markupExtensions="clr-namespace:SolidZip.Views.MarkupExtensions"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:SolidZip.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.Resources>
        <!--  Styles for Settings View  -->
        <Style TargetType="TextBlock" x:Key="SettingsSectionHeader">
            <Setter Property="FontFamily" Value="{StaticResource BricolageGrotesque}" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColorBrush}" />
            <Setter Property="Margin" Value="0,0,0,15" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style TargetType="TextBlock" x:Key="SettingsLabel">
            <Setter Property="FontFamily" Value="{StaticResource BricolageGrotesque}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColorBrush}" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,0,10,0" />
        </Style>

        <Style TargetType="TextBox" x:Key="SettingsTextBox">
            <Setter Property="Background" Value="{DynamicResource BackgroundColorBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColorBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ForegroundColorBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="MinWidth" Value="200" />
        </Style>

        <Style TargetType="ComboBox" x:Key="SettingsComboBox">
            <Setter Property="Foreground" Value="{DynamicResource BackgroundColorBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColorBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="MinWidth" Value="200" />
        </Style>

        <!--  Custom ComboBox for file size display  -->
        <Style TargetType="ComboBox" x:Key="FileSizeComboBox">
            <Setter Property="Foreground" Value="{DynamicResource BackgroundColorBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColorBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="MinWidth" Value="150" />
        </Style>

        <Style TargetType="CheckBox" x:Key="SettingsCheckBox">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColorBrush}" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,5,0,5" />
        </Style>

        <Style TargetType="Button" x:Key="ThemeChangeButton">
            <Setter Property="Background" Value="{DynamicResource PrimaryColorBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColorBrush}" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="40,15" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"
                            x:Name="Border">
                            <ContentPresenter
                                Content="{TemplateBinding Content}"
                                HorizontalAlignment="Center"
                                Margin="{TemplateBinding Padding}"
                                VerticalAlignment="Center"
                                x:Name="ContentPresenter" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="Border" Value="{DynamicResource WarningColorBrush}" />
                                <Setter Property="BorderBrush" TargetName="Border" Value="{DynamicResource PrimaryColorBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" TargetName="Border" Value="0.8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="SettingsSaveButton">
            <Setter Property="Background" Value="{DynamicResource PrimaryColorBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColorBrush}" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3"
                            x:Name="Border">
                            <ContentPresenter
                                Content="{TemplateBinding Content}"
                                HorizontalAlignment="Center"
                                Margin="{TemplateBinding Padding}"
                                VerticalAlignment="Center"
                                x:Name="ContentPresenter" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="Border" Value="{DynamicResource WarningColorBrush}" />
                                <Setter Property="BorderBrush" TargetName="Border" Value="{DynamicResource PrimaryColorBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" TargetName="Border" Value="0.8" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  Custom style for the file list ListBox  -->
        <Style TargetType="ListBox" x:Key="FileListBoxStyle">
            <Setter Property="Background" Value="{DynamicResource BackgroundColorBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource ForegroundColorBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ForegroundColorBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Padding" Value="5" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}"
                                        x:Name="Border">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" TargetName="Border" Value="{DynamicResource ForegroundHoverColorBrush}" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" TargetName="Border" Value="{DynamicResource PrimaryColorBrush}" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <!--  Each file item in the list  -->
                        <Grid Margin="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  File icon using the converter  -->
                            <Image
                                Grid.Column="0"
                                Height="24"
                                Margin="0,0,10,0"
                                Source="{Binding Converter={markupExtensions:Converters Converter=PathToImageSourceConvertor}}"
                                Width="24" />

                            <!--  File name using the converter  -->
                            <TextBlock
                                FontSize="13"
                                Grid.Column="1"
                                Text="{Binding Converter={markupExtensions:Converters Converter=PathToNameConvertor}}"
                                VerticalAlignment="Center" />
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!--  Title Bar  -->
            <RowDefinition Height="Auto" />
            <!--  Main Content Area  -->
            <RowDefinition Height="*" />
            <!--  Bottom Action Bar  -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title bar  -->
        <Border
            Background="{DynamicResource BackgroundColorBrush}"
            BorderBrush="{DynamicResource ForegroundColorBrush}"
            BorderThickness="0,0,0,1"
            Grid.Row="0"
            Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Application Icon and Title  -->
                <StackPanel
                    Grid.Column="0"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                    <Image
                        Height="24"
                        Margin="0,0,10,0"
                        Source="../assets/szicon.ico"
                        Width="{StaticResource IconWidth}" />
                    <TextBlock
                        FontFamily="{StaticResource BricolageGrotesque}"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Foreground="{DynamicResource ForegroundColorBrush}"
                        Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" />
                </StackPanel>

                <!--  Close Button  -->
                <Button
                    Click="CloseSettings"
                    Grid.Column="2"
                    Style="{StaticResource SzIconButton}"
                    ToolTip="{Binding Localization.Close}">
                    <materialIcons:MaterialIcon
                        Height="20"
                        Kind="Close"
                        Width="20" />
                </Button>
            </Grid>
        </Border>

        <!--  Maim settings area  -->
        <ScrollViewer
            Grid.Row="1"
            Padding="30"
            VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <!--  Language Settings Section  -->
                    <RowDefinition Height="Auto" />
                    <!--  Theme Change Button  -->
                    <RowDefinition Height="Auto" />
                    <!--  Explorer Settings Section  -->
                    <RowDefinition Height="Auto" />
                    <!--  File Display Settings  -->
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Language settings  -->
                <StackPanel Grid.Row="0" Margin="0,0,0,30">
                    <TextBlock
                        Style="{StaticResource SettingsSectionHeader}"
                        Text="{Binding Localization.LanguageSettings}"
                        ToolTip="{Binding Localization.LanguageSettingsTooltip}" />

                    <!--  Language Selection  -->
                    <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                        <TextBlock
                            Style="{StaticResource SettingsLabel}"
                            Text="{Binding Localization.Language}"
                            ToolTip="{Binding Localization.LanguageTooltip}"
                            Width="150" />
                        <ComboBox
                            DisplayMemberPath="."
                            ItemsSource="{Binding AvailableLanguages}"
                            SelectedItem="{Binding SelectedLanguage}"
                            SelectedValuePath="."
                            Style="{StaticResource SettingsComboBox}"
                            ToolTip="{Binding Localization.SelectLanguageTooltip}" />
                    </StackPanel>
                </StackPanel>

                <!--  ==================== THEME CHANGE BUTTON ====================  -->
                <Border
                    Background="{DynamicResource BackgroundColorBrush}"
                    BorderBrush="{DynamicResource ForegroundColorBrush}"
                    BorderThickness="0,1,0,1"
                    Grid.Row="1"
                    Margin="0,0,0,30"
                    Padding="0,20,0,20">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,15"
                            Style="{StaticResource SettingsSectionHeader}"
                            Text="{Binding Localization.ThemeSettings}"
                            ToolTip="{Binding Localization.ThemeSettingsTooltip}" />

                        <!--  Wide Theme Change Button  -->
                        <Button
                            Command="{Binding ChangeThemeCommand}"
                            HorizontalAlignment="Center"
                            Style="{StaticResource ThemeChangeButton}"
                            ToolTip="{Binding Localization.ChangeThemeTooltip}">
                            <StackPanel Orientation="Horizontal">
                                <materialIcons:MaterialIcon
                                    Height="24"
                                    Kind="Palette"
                                    Margin="0,0,10,0"
                                    Width="24" />
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Text="{Binding Localization.ChangeTheme}" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!--  ==================== EXPLORER SETTINGS SECTION ====================  -->
                <StackPanel Grid.Row="2" Margin="0,0,0,30">
                    <TextBlock
                        Style="{StaticResource SettingsSectionHeader}"
                        Text="{Binding Localization.ExplorerSettings}"
                        ToolTip="{Binding Localization.ExplorerSettingsTooltip}" />

                    <!--  Lua Console Checkbox  -->
                    <CheckBox
                        IsChecked="{Binding ShowLuaConsole}"
                        Margin="0,0,0,10"
                        Style="{StaticResource SettingsCheckBox}"
                        ToolTip="{Binding Localization.ShowLuaConsoleTooltip}">
                        <TextBlock FontSize="13" Text="{Binding Localization.ShowLuaConsole}" />
                    </CheckBox>

                    <!--  Explorer View Style ComboBox  -->
                    <StackPanel Margin="0,0,0,15" Orientation="Horizontal">
                        <TextBlock
                            Style="{StaticResource SettingsLabel}"
                            Text="{Binding Localization.ExplorerViewStyle}"
                            ToolTip="{Binding Localization.ExplorerViewStyleTooltip}"
                            Width="150" />
                        <ComboBox
                            ItemsSource="{Binding ExplorerViewStyles}"
                            SelectedItem="{Binding SelectedExplorerViewStyle}"
                            Style="{StaticResource SettingsComboBox}"
                            ToolTip="{Binding Localization.SelectViewStyleTooltip}" />
                    </StackPanel>

                    <!--  Show Hidden Directories Checkbox  -->
                    <CheckBox
                        IsChecked="{Binding ShowHiddenDirectories}"
                        Style="{StaticResource SettingsCheckBox}"
                        ToolTip="{Binding Localization.ShowHiddenDirectoriesTooltip}">
                        <TextBlock FontSize="13" Text="{Binding Localization.ShowHiddenDirectories}" />
                    </CheckBox>
                </StackPanel>

                <!--  File display options  -->
                <StackPanel Grid.Row="3">
                    <TextBlock
                        Style="{StaticResource SettingsSectionHeader}"
                        Text="{Binding Localization.FileDisplaySettings}"
                        ToolTip="{Binding Localization.FileDisplaySettingsTooltip}" />

                    <!--  File Size Display ComboBox  -->
                    <StackPanel Margin="0,0,0,20" Orientation="Horizontal">
                        <TextBlock
                            Style="{StaticResource SettingsLabel}"
                            Text="{Binding Localization.FileSizeDisplay}"
                            ToolTip="{Binding Localization.FileSizeDisplayTooltip}"
                            Width="150" />
                        <ComboBox
                            ItemsSource="{Binding FileSizeDisplayOptions}"
                            SelectedItem="{Binding SelectedFileSizeDisplay}"
                            Style="{StaticResource FileSizeComboBox}"
                            ToolTip="{Binding Localization.SelectFileSizeDisplayTooltip}" />
                    </StackPanel>

                    <!--  Files ListBox with sample files  -->
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,10"
                            Style="{StaticResource SettingsLabel}"
                            Text="{Binding Localization.AdditionalRootFiles}"
                            ToolTip="{Binding Localization.AdditionalRootFilesTooltip}" />

                        <Border
                            BorderBrush="{DynamicResource ForegroundColorBrush}"
                            BorderThickness="1"
                            CornerRadius="3"
                            Height="200">
                            <ListBox
                                ItemsSource="{Binding Localization.AdditionalRootFiles}"
                                SelectedItem="{Binding SelectedSampleFile}"
                                Style="{StaticResource FileListBoxStyle}"
                                ToolTip="{Binding Localization.SelectFileTooltip}" />
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!--  Title bar  -->
        <Border
            Background="{DynamicResource BackgroundColorBrush}"
            BorderBrush="{DynamicResource ForegroundColorBrush}"
            BorderThickness="0,1,0,0"
            Grid.Row="2"
            Padding="20,15">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <!--  Reset Button  -->
                <Button
                    Command="{Binding ResetSettingsCommand}"
                    Margin="0,0,15,0"
                    Style="{StaticResource SzIconButton}"
                    ToolTip="{Binding Localization.ResetToDefaultsTooltip}">
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon
                            Height="18"
                            Kind="Restore"
                            Margin="0,0,5,0"
                            Width="18" />
                        <TextBlock Text="{Binding Localization.Reset}" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>

                <!--  Save Button  -->
                <Button
                    Command="{Binding SaveSettingsCommand}"
                    Style="{StaticResource SettingsSaveButton}"
                    ToolTip="{Binding Localization.SaveChangesTooltip}">
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon
                            Height="20"
                            Kind="ContentSave"
                            Margin="0,0,10,0"
                            Width="20" />
                        <TextBlock
                            FontSize="14"
                            FontWeight="SemiBold"
                            Text="{Binding Localization.SaveChanges}" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>