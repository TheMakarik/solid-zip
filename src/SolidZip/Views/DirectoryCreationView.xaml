<Window
    AllowsTransparency="True"
    Background="{DynamicResource BackgroundColorBrush}"
    DataContext="{markupExtensions:ResolveViewAndViewModel}"
    Height="160"
    Icon="../assets/szicon.ico"
    MouseLeftButtonDown="DragWindow"
    ResizeMode="CanResizeWithGrip"
    Title="{Binding Localization.NewDirectory}"
    Width="300"
    WindowStyle="None"
    d:DataContext="{d:DesignInstance viewModels:DirectoryCreationViewModel}"
    mc:Ignorable="d"
    x:Class="SolidZip.Views.DirectoryCreationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:markupExtensions="clr-namespace:SolidZip.Views.MarkupExtensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:SolidZip.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid Grid.Row="0">
            <StackPanel
                HorizontalAlignment="Left"
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <Image
                    Margin="4,3,0,0"
                    Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="{StaticResource IconWidth}" />
                <TextBlock
                    FontFamily="{StaticResource BricolageGrotesque}"
                    FontSize="15"
                    Foreground="{DynamicResource ForegroundColorBrush}"
                    Margin="3,10,0,0"
                    Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" />
            </StackPanel>
            <Button
                Click="Close"
                Content="{icons:MaterialIconExt Kind=Close}"
                Grid.Row="0"
                Height="20"
                HorizontalAlignment="Right"
                Padding="2"
                Width="{Binding Height, RelativeSource={RelativeSource Self}}">
                <Button.Style>
                    <Style BasedOn="{StaticResource SzIconButton}" TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryColorBrush}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <!--  Input Field with Error Handling  -->
        <StackPanel Grid.Row="1">
            <TextBlock
                Margin="5,15,5,3"
                Style="{StaticResource SzTextBlockLabel}"
                Text="{Binding Localization.InsertDirectoryName}" />
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <icons:MaterialIcon
                    Foreground="{Binding Foreground, ElementName=DirectoryNameTextBox}"
                    Grid.Column="0"
                    Grid.Row="0"
                    Kind="FolderAdd"
                    Margin="0,0,9,0" />

                <TextBox
                    Grid.Column="1"
                    Grid.Row="0"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,10,0"
                    Text="{Binding DirectoryName, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True, NotifyOnValidationError=True}"
                    x:Name="DirectoryNameTextBox">
                    <Validation.ErrorTemplate>
                        <ControlTemplate>
                            <Grid>
                                <AdornedElementPlaceholder x:Name="placeholder" />
                            </Grid>
                        </ControlTemplate>
                    </Validation.ErrorTemplate>
                    <TextBox.Style>
                        <Style BasedOn="{StaticResource SzTextBox}" TargetType="TextBox">
                            <Setter Property="Validation.ErrorTemplate">
                                <Setter.Value>
                                    <ControlTemplate>
                                        <Grid>
                                            <AdornedElementPlaceholder x:Name="placeholder" />
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="Validation.HasError" Value="True">
                                    <Setter Property="BorderBrush" Value="{DynamicResource WarningColorBrush}" />
                                    <Setter Property="ToolTip">
                                        <Setter.Value>
                                            <ToolTip Content="{Binding RelativeSource={RelativeSource Self}, Path=PlacementTarget.(Validation.Errors)[0].ErrorContent}" />
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <TextBlock
                    Grid.Column="1"
                    Grid.Row="1"
                    Margin="3,5,0,0"
                    Style="{StaticResource SzTextBlockLabel}"
                    Text="{Binding ElementName=DirectoryNameTextBox, Path=(Validation.Errors), Converter={markupExtensions:Converters Converter=DirectoryCreationalLocalizationProblemConverter}}"
                    Visibility="{Binding ElementName=DirectoryNameTextBox, Path=(Validation.HasError), Converter={markupExtensions:Converters Converter=BooleanToVisibilityConverter}}"
                    x:Name="ErrorTextBlock" />
            </Grid>
        </StackPanel>

        <!--  Create Button with Error State  -->
        <Button
            Command="{Binding CreateDirectoryCommand}"
            Grid.Row="2"
            Height="30"
            Margin="60,0,10,20"
            Padding="0">
            <Button.Style>
                <Style BasedOn="{StaticResource SzButton}" TargetType="Button">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=DirectoryNameTextBox, Path=(Validation.HasError)}" Value="True">
                            <Setter Property="IsEnabled" Value="False" />
                            <Setter Property="Background" Value="{DynamicResource ForegroundHoverColorBrush}" />
                            <Setter Property="Opacity" Value="0.5" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <StackPanel Orientation="Horizontal">
                <icons:MaterialIcon
                    Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                    Kind="FolderAdd"
                    Width="20" />
                <Label Content="{Binding Localization.Create}" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
            </StackPanel>
        </Button>
    </Grid>
</Window>