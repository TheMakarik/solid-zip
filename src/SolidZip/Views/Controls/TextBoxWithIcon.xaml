<UserControl
    d:DesignHeight="100"
    d:DesignWidth="600"
    mc:Ignorable="d"
    x:Class="SolidZip.Views.Controls.TextBoxWithIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SolidZip.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <Style TargetType="Border" x:Key="FocusBorderStyle">
            <Setter Property="BorderBrush" Value="{DynamicResource SzForegroundHoverColorBrush}" />
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource SzPrimaryColorBrush}" />
                </Trigger>
                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource SzForegroundHoverColorBrush}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            BorderThickness="3,3,0,3"
            Style="{StaticResource FocusBorderStyle}"
            Width="{Binding Height, RelativeSource={RelativeSource Self}}"
            x:Name="MainIconBorder">
            <Image Height="{Binding FontSize, ElementName=InputTextBox}" x:Name="IconImage" />
        </Border>

        <Border
            BorderThickness="0,3,3,3"
            Grid.Column="1"
            Style="{StaticResource FocusBorderStyle}"
            x:Name="MainTextBorder">

            <Grid>
                <TextBox
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="15"
                    Foreground="{DynamicResource SzForegroundColorBrush}"
                    HorizontalAlignment="Stretch"
                    TextAlignment="Left"
                    VerticalAlignment="Center"
                    x:Name="InputTextBox" />
            </Grid>
        </Border>
    </Grid>
</UserControl>