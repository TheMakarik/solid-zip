<Window
    AllowsTransparency="True"
    Background="{DynamicResource BackgroundColorBrush}"
    DataContext="{markupExtensions:ResolveViewAndViewModel}"
    Height="450"
    Icon="/assets/szicon.ico"
    MinHeight="150"
    MinWidth="300"
    MouseLeftButtonDown="DragWindow"
    ResizeMode="CanResizeWithGrip"
    Title="{Binding Localization.NewZip}"
    Width="800"
    WindowStyle="None"
    d:DataContext="{d:DesignInstance viewModels:ZipArchiveCreatorViewModel}"
    mc:Ignorable="d"
    x:Class="SolidZip.Views.ZipArchiveCreatorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SolidZip.Views"
    xmlns:markupExtensions="clr-namespace:SolidZip.Views.MarkupExtensions"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:SolidZip.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Application's Title bar  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Title and Icon area  -->
            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Left"
                Orientation="Horizontal"
                VerticalAlignment="Center">

                <Image
                    Margin="4,3,0,0"
                    Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="{StaticResource IconWidth}" />
                <TextBlock
                    FontFamily="{StaticResource BricolageGrotesque}"
                    FontSize="15"
                    Foreground="{DynamicResource ForegroundColorBrush}"
                    Margin="3,10,0,0"
                    Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" />

            </StackPanel>

            <!--  Buttons area  -->
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                VerticalAlignment="Top">

                <!--  Minimize button  -->
                <Button
                    Click="Minimize"
                    Content="{materialIcons:MaterialIconExt Kind=Minimize}"
                    Padding="2"
                    Style="{DynamicResource SzIconButton}"
                    Width="{StaticResource TitleBarIconsWidth}" />

                <!--  Maximize button  -->
                <Button
                    Click="Restore"
                    Content="{materialIcons:MaterialIconExt Kind=Maximize}"
                    Padding="2"
                    Style="{DynamicResource SzIconButton}"
                    Width="{StaticResource TitleBarIconsWidth}" />

                <!--  Close button  -->
                <Button
                    Click="Close"
                    Content="{materialIcons:MaterialIconExt Kind=Close}"
                    Padding="2"
                    Width="{StaticResource TitleBarIconsWidth}">
                    <Button.Style>
                        <Style BasedOn="{StaticResource SzIconButton}" TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryColorBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>


        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border
                BorderBrush="{DynamicResource ForegroundColorBrush}"
                BorderThickness="0,1,0,0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="4,-15,4,0" />
            <ScrollViewer
                Grid.Column="0"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Style="{StaticResource SzTextBlockArchiveSectionHeader}" Text="{Binding Localization.SelectOutputFolder}" />
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon
                            Foreground="{DynamicResource ForegroundColorBrush}"
                            Kind="FolderEdit"
                            Margin="10,0" />
                        <TextBox
                            MaxWidth="200"
                            MinWidth="100"
                            Style="{StaticResource SzTextBox}" />
                    </StackPanel>
                    <TextBlock Style="{StaticResource SzTextBlockArchiveSectionHeader}" Text="{Binding Localization.SetArchiveName}" />
                    <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                        <materialIcons:MaterialIcon
                            Foreground="{DynamicResource ForegroundColorBrush}"
                            Kind="Rename"
                            Margin="10,0" />
                        <TextBox
                            MaxWidth="200"
                            MinWidth="100"
                            Style="{StaticResource SzTextBox}" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <ScrollViewer
                Grid.Column="1"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Style="{StaticResource SzTextBlockArchiveSectionHeader}" Text="{Binding Localization.Password}" />
                    <StackPanel Orientation="Horizontal">
                        <materialIcons:MaterialIcon
                            Foreground="{DynamicResource ForegroundColorBrush}"
                            Kind="PasswordAdd"
                            Margin="10,0" />
                        <TextBox
                            MaxWidth="200"
                            MinWidth="100"
                            Style="{StaticResource SzTextBox}" />
                    </StackPanel>
                    <TextBlock Style="{StaticResource SzTextBlockArchiveSectionHeader}" Text="{Binding Localization.Encryption}" />
                    <ComboBox
                        HorizontalAlignment="Left"
                        Margin="10,10"
                        Style="{StaticResource SzComboBox}"
                        Width="30" />
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Button
            Grid.Row="2"
            HorizontalAlignment="Right"
            Margin="30"
            Style="{StaticResource SzButton}">
            <StackPanel Orientation="Horizontal">
                <materialIcons:MaterialIcon Kind="ArchiveAdd" />
                <Label Content="{Binding Localization.CreateArchive}" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
            </StackPanel>
        </Button>
    </Grid>
</Window>
