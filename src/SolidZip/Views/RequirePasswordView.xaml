<Window
    AllowsTransparency="True"
    Background="{DynamicResource BackgroundColorBrush}"
    DataContext="{markupExtensions:ResolveViewAndViewModel}"
    Height="180"
    Icon="../assets/szicon.ico"
    MouseLeftButtonDown="DragWindow"
    ResizeMode="CanResizeWithGrip"
    Title="{Binding Localization.RequirePasswordTitle}"
    Width="320"
    WindowStyle="None"
    d:DataContext="{d:DesignInstance viewModels:RequirePasswordViewModel}"
    mc:Ignorable="d"
    x:Class="SolidZip.Views.RequirePasswordView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:icons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    xmlns:markupExtensions="clr-namespace:SolidZip.Views.MarkupExtensions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:SolidZip.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Closed">
            <b:InvokeCommandAction Command="{Binding WindowClosedCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel
                HorizontalAlignment="Left"
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <Image
                    Margin="4,3,0,0"
                    Source="{Binding Icon, RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="{StaticResource IconWidth}" />
                <TextBlock
                    FontFamily="{StaticResource BricolageGrotesque}"
                    FontSize="15"
                    Foreground="{DynamicResource ForegroundColorBrush}"
                    Margin="3,10,0,0"
                    Text="{Binding Title, RelativeSource={RelativeSource AncestorType=Window}}" />
            </StackPanel>
            <Button
                Command="{Binding CancelCommand}"
                Content="{icons:MaterialIconExt Kind=Close}"
                Grid.Row="0"
                Height="20"
                HorizontalAlignment="Right"
                Padding="2"
                Width="{Binding Height, RelativeSource={RelativeSource Self}}">
                <Button.Style>
                    <Style BasedOn="{StaticResource SzIconButton}" TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryColorBrush}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>

        <StackPanel Grid.Row="1">
            <TextBlock
                Margin="5,15,5,3"
                Style="{StaticResource SzTextBlockLabel}"
                Text="{Binding Localization.EnterPassword}" />
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <icons:MaterialIcon
                    Foreground="{Binding Foreground, ElementName=PasswordTextBox}"
                    Grid.Column="0"
                    Kind="Lock"
                    Margin="0,0,9,0" />
                <TextBox
                    Grid.Column="1"
                    Margin="0,0,10,0"
                    Style="{StaticResource SzTextBox}"
                    Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                    x:Name="PasswordTextBox" />
            </Grid>
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Right"
            Margin="10,0,10,20"
            Orientation="Horizontal">
            <Button
                Command="{Binding CancelCommand}"
                Margin="0,0,8,0"
                MinWidth="80"
                Style="{DynamicResource SzButton}">
                <Label Content="{Binding Localization.Cancel}" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
            </Button>
            <Button
                Command="{Binding ConfirmCommand}"
                MinWidth="80"
                Style="{DynamicResource SzButton}">
                <StackPanel Orientation="Horizontal">
                    <icons:MaterialIcon
                        Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                        Kind="Check"
                        Width="18" />
                    <Label Content="{Binding Localization.Confirm}" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" />
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
